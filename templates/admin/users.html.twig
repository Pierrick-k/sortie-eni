{% extends 'base.html.twig' %}

{% block title %}Gerer les utilisateurs | {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <h1>Gérer les Utilisateurs</h1>
    {{ form_start(searchForm, {'action': path('user_list') }) }}
    <legend>Filtrer les utilisateurs</legend>
    {{ form_row(searchForm.nom) }}
    <button type="submit" class="btn btn-primary">Rechercher</button>
    {{ form_end(searchForm) }}
    <table>
        <thead>
        <tr>
            <th>Email</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {% if user.fichier %}
                <td class="divImage"><img class='userImg' src="{{ asset('uploads/images/user/' ~ user.fichier) }}" alt="Image de profile"></td>
                {% else %}
                    <td class="divImage"><img class='userImg' src="{{ asset('images/user_defaut.jpg') }}" alt="Image de profile"></td>
                     {% endif %}
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.actif ? 'Oui' : 'Non' }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('user_update', {id: user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}